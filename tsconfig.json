{
  "compilerOptions": {
    "noImplicitAny": true, //you need to define data types if it is = true
    "preserveConstEnums": true,
    "sourceMap": true, //use sourceMap; what in JS = TypeScript; for example show mistakes in TS
    "target": "ES6",  //target version of JS that will be compiled
    "downlevelIteration": true, //for modern loops like: for of
    "lib" : ["dom", "es6", "dom.iterable"], //environment we are using
    "outDir" : "dist", //directory where we want to transpile files
    "experimentalDecorators": false,
    "emitDecoratorMetadata": true
  }
}
